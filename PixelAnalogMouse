using UnityEngine;

public class CharacterMove : MonoBehaviour
{
    public float moveSpeed = 3f;

    Animator animationDimainkan;
    string animationSemasa = "";

    void Start()
    {
        animationDimainkan = GetComponent<Animator>();
    }

    void Update()
    {
        if (Input.GetKey(KeyCode.LeftArrow))
        {
            animasiDimainkan("MoveLeft");
            transform.position += Vector3.left * moveSpeed * Time.deltaTime;
        }
        else if (Input.GetKey(KeyCode.RightArrow))
        {
            animasiDimainkan("MoveRight");
            transform.position += Vector3.right * moveSpeed * Time.deltaTime;
        }
        else
        {
            animasiDimainkan("Idle");
        }
    }

    void animasiDimainkan(string animationDiinginkan)
    {
        if (animationSemasa == animationDiinginkan) return;

        animationDimainkan.Play(animationDiinginkan);
        animationSemasa = animationDiinginkan;
    }
}